<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>WA Blast</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" rel="stylesheet">
  <link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet">
  <link href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg bg-white border-bottom sticky-top">
    <div class="container">
      <a class="navbar-brand fw-bold text-primary" href="/">WA Blast</a>
      <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#nav"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="nav">
        <ul class="navbar-nav me-auto">
          <% if (user) { %>
            <li class="nav-item"><a class="nav-link" href="/wa/connect"><i class="fa fa-brands fa-whatsapp text-success me-1"></i>WhatsApp</a></li>
            <li class="nav-item"><a class="nav-link" href="/templates"><i class="fa fa-message me-1"></i>Template</a></li>
            <li class="nav-item"><a class="nav-link" href="/campaigns"><i class="fa fa-bullhorn me-1"></i>Campaign</a></li>
            <li class="nav-item"><a class="nav-link" href="/generate"><i class="fa fa-solid fa-recycle me-1"></i>Generate Number</a></li>
          <% } %>
        </ul>
        <ul class="navbar-nav">
          <% if (!user) { %>
            <li class="nav-item"><a class="btn btn-primary" href="/auth/login">Login</a></li>
          <% } else { %>
            <li class="nav-item dropdown">
  <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" data-bs-toggle="dropdown">
    <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width:32px;height:32px;">
      <i class="fa fa-user"></i>
    </div>
    <span class="fw-semibold"><%= user.name %></span>
  </a>
  <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 rounded-3">
    <li>
      <h6 class="dropdown-header text-muted">
        <i class="fa fa-circle-user me-2 text-primary"></i>Profil
      </h6>
    </li>
    <li>
      <a class="dropdown-item d-flex align-items-center gap-2" href="#">
        <i class="fa fa-envelope text-primary"></i>
        <span><%= user.email %></span>
      </a>
    </li>
    <li><hr class="dropdown-divider"></li>
    <li>
      <a id="logoutBtn" class="dropdown-item d-flex align-items-center gap-2 text-danger" href="#">
        <i class="fa fa-right-from-bracket"></i>
        <span>Logout</span>
      </a>
    </li>
  </ul>
</li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <main class="py-4"><div class="container"><%- body %></div></main>

  <footer class="py-4 border-top"><div class="container text-center text-muted small">© <%= new Date().getFullYear() %> WA Blast</div></footer>

  <!-- ✅ jQuery harus paling pertama -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

  <!-- ✅ Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- ✅ DataTables -->
  <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
  <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
  <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>

  <!-- ✅ Plugin lainnya -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
  <script>AOS.init({ once:true, duration:700, easing:'ease-out-quart' });</script>
  <script src="/socket.io/socket.io.js"></script>

  <!-- ✅ Script kamu terakhir -->
  <script src="/js/main.js"></script>

  <script>
document.addEventListener("DOMContentLoaded", () => {
  const logoutBtn = document.getElementById("logoutBtn");
  if (logoutBtn) {
    logoutBtn.addEventListener("click", async (e) => {
      e.preventDefault();

      const confirm = await Swal.fire({
        title: "Yakin logout?",
        text: "Sesi Anda akan diakhiri.",
        icon: "warning",
        showCancelButton: true,
        confirmButtonText: "Ya, logout",
        cancelButtonText: "Batal"
      });

      if (!confirm.isConfirmed) return;

      try {
        const res = await fetch("/auth/logout", { method: "GET" });
        const json = await res.json();

        if (json.success) {
          Swal.fire({
            icon: "success",
            title: "Logout berhasil",
            timer: 1500,
            showConfirmButton: false
          }).then(() => {
            window.location.href = "/auth/login";
          });
        } else {
          Swal.fire("Error", json.error || "Gagal logout", "error");
        }
      } catch (err) {
        Swal.fire("Error", "Server error saat logout", "error");
      }
    });
  }
});
</script>
</body>
</html>
