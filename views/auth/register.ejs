<div class="row justify-content-center">
  <div class="col-md-6" data-aos="zoom-in">
    <div class="card glass shadow-sm">
      <div class="card-body p-4">
        <h4 class="mb-3 text-primary"><i class="fa fa-user-plus me-2"></i>Register</h4>
        <% if (typeof error !== 'undefined') { %>
          <script>Swal.fire({icon:'error',title:'Oops',text:'<%= error %>'});</script>
        <% } %>
        <form method="POST" action="/auth/register">
          <div class="mb-3"><label class="form-label">Nama</label><input required name="name" class="form-control"></div>
          <div class="mb-3"><label class="form-label">Email</label><input required name="email" type="email" class="form-control"></div>
          <div class="mb-3"><label class="form-label">Password</label><input required name="password" type="password" class="form-control"></div>
          <button class="btn btn-primary w-100">Buat Akun</button>
        </form>
      </div>
    </div>
  </div>
</div>
