<div class="row justify-content-center">
  <div class="col-md-5" data-aos="zoom-in">
    <div class="card glass shadow-sm">
      <div class="card-body p-4">
        <h4 class="mb-3 text-primary"><i class="fa fa-right-to-bracket me-2"></i>Login</h4>
        <% if (typeof error !== 'undefined') { %>
          <script>Swal.fire({icon:'error',title:'Oops',text:'<%= error %>'});</script>
        <% } %>
        <form method="POST" action="/auth/login">
          <div class="mb-3"><label class="form-label">Email</label><input required name="email" type="email" class="form-control"></div>
          <div class="mb-3"><label class="form-label">Password</label><input required name="password" type="password" class="form-control"></div>
          <button class="btn btn-primary w-100">Masuk</button>
        </form>
        <div class="mt-3 text-center">Belum punya akun? <a href="/auth/register">Register</a></div>
      </div>
    </div>
  </div>
</div>
