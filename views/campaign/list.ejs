<div class="d-flex justify-content-between align-items-center mb-3">
  <h4 class="mb-0">
    <i class="fa fa-bullhorn text-primary me-2"></i>Campaigns
  </h4>
  <a href="/campaigns/new" class="btn btn-primary">
    <i class="fa fa-plus me-2"></i>Campaign Baru
  </a>
</div>

<table class="table table-hover align-middle shadow-sm rounded">
  <thead class="table-light">
    <tr>
      <th>No</th>
      <th>Nama</th>
      <th>Template</th>
      <th>Status</th>
      <th>Target</th>
      <th class="text-center">Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% if (campaigns.length === 0) { %>
      <tr>
        <td colspan="6" class="text-center text-muted py-4">
          Belum ada campaign, buat baru dulu.
        </td>
      </tr>
    <% } else { %>
      <% campaigns.forEach((c, i) => { 
        const total = c.targets.length;
        const valid = c.targets.filter(t=>t.status==="valid").length;
        const invalid = c.targets.filter(t=>t.status==="invalid").length;
        const success = c.targets.filter(t=>t.status==="success").length;
        const error = c.targets.filter(t=>t.status==="error").length;
      %>
      <tr>
        <td><%= i+1 %></td>
        <td class="fw-semibold"><%= c.name %></td>
        <td><%= c.template ? c.template.name : "-" %></td>
        <td>
          <span class="badge bg-<%= 
            c.status==="done" ? "success" : 
            c.status==="running" ? "warning" : "secondary" 
          %>">
            <%= c.status %>
          </span>
        </td>
        <td class="d-flex flex-wrap gap-1">
          <span class="badge bg-info">Total: <%= total %></span>
          <span class="badge bg-success">Valid: <%= valid %></span>
          <span class="badge bg-danger">Invalid: <%= invalid %></span>
          <span class="badge bg-primary">Success: <%= success %></span>
          <span class="badge bg-dark">Error: <%= error %></span>
        </td>
        <td class="text-center d-flex gap-1 justify-content-center">
          <% if (c.status==="idle") { %>
            <button class="btn btn-sm btn-success btn-run-campaign" data-id="<%= c.id %>">
              <i class="fa fa-play"></i>
            </button>
          <% } else if (c.status==="running") { %>
            <button class="btn btn-sm btn-secondary" disabled>
              <i class="fa fa-spinner fa-spin"></i>
            </button>
          <% } else { %>
            <button class="btn btn-sm btn-outline-secondary" disabled>
              <i class="fa fa-check"></i>
            </button>
          <% } %>

          <!-- Tombol Detail -->
          <button class="btn btn-sm btn-info text-white btn-detail-campaign" data-id="<%= c.id %>">
            <i class="fa fa-eye"></i>
          </button>

          <!-- Tombol Delete -->
          <button class="btn btn-sm btn-danger btn-delete-campaign" data-id="<%= c.id %>">
            <i class="fa fa-trash"></i>
          </button>
        </td>
      </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>

<!-- Modal Detail Campaign -->
<div class="modal fade" id="campaignDetailModal" tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header border-0">
        <h5 class="modal-title">
          <i class="fa fa-eye text-primary me-2"></i>Detail Campaign
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="campaignDetailBody">
        <div class="text-center text-muted">Memuat detail...</div>
      </div>
    </div>
  </div>
</div>
