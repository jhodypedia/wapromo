<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
  <h4 class="mb-0"><i class="fa fa-message text-primary me-2"></i>Template Pesan</h4>
  <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createTemplateModal">
    <i class="fa fa-plus me-2"></i>Tambah Template
  </button>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <div class="table-responsive">
      <table id="templateTable" class="table table-hover align-middle w-100">
        <thead class="table-light">
          <tr>
            <th style="width:40px">#</th>
            <th>Judul</th>
            <th>Isi</th>
            <th>Link</th>
            <th>Status</th>
            <th style="width:140px">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% templates.forEach((t, i) => { %>
            <tr id="template-<%= t.id %>">
              <td><%= i+1 %></td>
              <td class="fw-semibold"><%= t.title %></td>
              <td style="white-space:pre-wrap; max-width:300px;"><%= t.body %></td>
              <td>
                <% if (t.link) { %>
                  <a href="<%= t.link %>" target="_blank"><%= t.link %></a>
                <% } else { %>
                  <span class="text-muted">-</span>
                <% } %>
              </td>
              <td>
                <span class="badge <%= t.isActive ? 'bg-success' : 'bg-secondary' %>">
                  <%= t.isActive ? 'Aktif' : 'Nonaktif' %>
                </span>
              </td>
              <td class="d-flex gap-1">
                <button class="btn btn-sm btn-warning edit-template"
                        data-id="<%= t.id %>"
                        data-title="<%= t.title %>"
                        data-body="<%= t.body %>"
                        data-link="<%= t.link %>"
                        data-active="<%= t.isActive %>">
                  <i class="fa fa-edit"></i>
                </button>
                <button class="btn btn-sm btn-danger delete-template" data-id="<%= t.id %>">
                  <i class="fa fa-trash"></i>
                </button>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Modal Tambah Template -->
<div class="modal fade" id="createTemplateModal" tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header border-0">
        <h5 class="modal-title"><i class="fa fa-plus text-primary me-2"></i>Tambah Template</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="createTemplateForm">
          <div class="mb-3">
            <label class="form-label">Judul</label>
            <input type="text" name="title" class="form-control" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Isi Pesan</label>
            <textarea name="body" class="form-control" rows="4" required></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Link (opsional)</label>
            <input type="text" name="link" class="form-control">
          </div>
          <div class="mb-3">
            <label class="form-label">Status</label>
            <select name="isActive" class="form-select">
              <option value="true" selected>Aktif</option>
              <option value="false">Nonaktif</option>
            </select>
          </div>
          <button class="btn btn-primary w-100" type="submit">
            <i class="fa fa-save me-2"></i>Simpan
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Modal Edit Template -->
<div class="modal fade" id="editTemplateModal" tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header border-0">
        <h5 class="modal-title"><i class="fa fa-edit text-warning me-2"></i>Edit Template</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="editTemplateForm">
          <input type="hidden" id="editTemplateId">
          <div class="mb-3">
            <label class="form-label">Judul</label>
            <input type="text" id="editTitle" class="form-control" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Isi Pesan</label>
            <textarea id="editBody" class="form-control" rows="4" required></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Link (opsional)</label>
            <input type="text" id="editLink" class="form-control">
          </div>
          <div class="mb-3">
            <label class="form-label">Status</label>
            <select id="editStatus" class="form-select">
              <option value="true">Aktif</option>
              <option value="false">Nonaktif</option>
            </select>
          </div>
          <button class="btn btn-warning w-100" type="submit">
            <i class="fa fa-save me-2"></i>Update
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- DataTables + Script -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
<script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

<script>
document.addEventListener("DOMContentLoaded", () => {
  toastr.options = { closeButton:true, progressBar:true, positionClass:"toast-top-right", timeOut:"3000" };

  // Init DataTable
  const table = $('#templateTable').DataTable({
    columnDefs: [{ orderable:false, targets:[5] }],
    order: [[0,'asc']]
  });

  // Tambah Template
  document.getElementById("createTemplateForm").addEventListener("submit", async (e)=>{
    e.preventDefault();
    const form = e.target;
    const data = {
      title: form.title.value,
      body: form.body.value,
      link: form.link.value,
      isActive: form.isActive.value
    };
    const res = await fetch("/templates/new", {
      method:"POST",
      headers:{ "Content-Type":"application/json" },
      body: JSON.stringify(data)
    });
    if (res.ok) {
      toastr.success("Template berhasil ditambahkan");
      setTimeout(()=>location.reload(),800);
    } else {
      toastr.error("Gagal menambahkan template");
    }
  });

  // Buka Modal Edit
  document.querySelectorAll(".edit-template").forEach(btn=>{
    btn.addEventListener("click", ()=>{
      document.getElementById("editTemplateId").value = btn.dataset.id;
      document.getElementById("editTitle").value = btn.dataset.title;
      document.getElementById("editBody").value = btn.dataset.body;
      document.getElementById("editLink").value = btn.dataset.link || "";
      document.getElementById("editStatus").value = btn.dataset.active === "true" ? "true" : "false";
      new bootstrap.Modal(document.getElementById("editTemplateModal")).show();
    });
  });

  // Submit Edit
  document.getElementById("editTemplateForm").addEventListener("submit", async (e)=>{
    e.preventDefault();
    const id = document.getElementById("editTemplateId").value;
    const data = {
      title: document.getElementById("editTitle").value,
      body: document.getElementById("editBody").value,
      link: document.getElementById("editLink").value,
      isActive: document.getElementById("editStatus").value
    };
    const res = await fetch(`/templates/${id}`, {
      method:"PUT",
      headers:{ "Content-Type":"application/json" },
      body: JSON.stringify(data)
    });
    const json = await res.json();
    if (json.success) {
      toastr.success("Template berhasil diupdate");
      setTimeout(()=>location.reload(),800);
    } else {
      toastr.error(json.error || "Gagal update");
    }
  });

  // Delete
  document.querySelectorAll(".delete-template").forEach(btn=>{
    btn.addEventListener("click", async ()=>{
      const id = btn.dataset.id;
      const confirmDel = await Swal.fire({
        title:"Hapus Template?",
        text:"Tindakan ini tidak bisa dibatalkan.",
        icon:"warning",
        showCancelButton:true,
        confirmButtonText:"Ya, hapus",
        cancelButtonText:"Batal"
      });
      if (confirmDel.isConfirmed) {
        const res = await fetch(`/templates/${id}`, { method:"DELETE" });
        const json = await res.json();
        if (json.success) {
          toastr.success("Template dihapus");
          setTimeout(()=>location.reload(),800);
        } else {
          toastr.error(json.error || "Gagal menghapus");
        }
      }
    });
  });
});
</script>

<style>
  .table td, .table th { vertical-align: middle; }
  .badge { font-size: .75rem; }
</style>
